{
  "name": "Store-Front",
  "version": "1.0.0",
  "main": "index.ts",
  "author": "Ahmed Hatem Elraei",
  "license": "MIT",
  "scripts": {
    "dev": "yarn build && nodemon build/index.js",
    "start": "nodemon src/index.ts",
    "build": "npx tsc",
    "test": "yarn build && yarn run test-up && cross-env ENVI=test jasmine && yarn run test-down",
    "start:prod": "yarn build && node build/index.js",
    "lint": "eslint src/**/**.ts",
    "lint:fix": "eslint --fix",
    "format": "prettier --write src/**/**.ts",
    "dev-up": "db-migrate up -m ./_Database/migrations   --config ./_Database/config/dev.json",
    "dev-down": "db-migrate reset -m ./_Database/migrations  --config ./_Database/config/dev.json",
    "test-up": "db-migrate up -e test -m ./_Database/migrations   --config ./_Database/config/test.json ",
    "test-down": "db-migrate reset  -e test -m ./_Database/migrations  --config ./_Database/config/test.json"
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "cors": "^2.8.5",
    "db-migrate": "^0.11.13",
    "db-migrate-pg": "^1.2.2",
    "dotenv": "^12.0.3",
    "express": "^4.17.2",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.10.0",
    "pg": "^8.7.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jasmine": "^3.10.3",
    "@types/jsonwebtoken": "^8.5.7",
    "@types/morgan": "^1.9.3",
    "@types/node": "^17.0.8",
    "@types/pg": "^8.6.4",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jasmine": "^4.0.2",
    "jasmine-spec-reporter": "^7.0.0",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "supertest": "^6.2.1",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  }
}
